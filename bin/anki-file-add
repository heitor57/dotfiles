#!/usr/bin/bash

if [ $XDG_SESSION_TYPE = wayland ]
then
	temp=$(wl-paste --primary)
else
	temp=$(xsel -o)
fi
temp=$(echo $temp | tr '\n' ' ')
# translation=$(trans -show-original=n en:pt "$temp")
request='{
    "action": "addNote",
    "params": {
        "note": {
            "deckName": "Languages::English::Sentences Speak::2",
            "modelName": "Basic translate speak",
            "fields": {
                "Front": "'"$temp"'",
                "Back": ""
            }
        }
    }
}'
curl localhost:8765 -X POST -d "$request"
