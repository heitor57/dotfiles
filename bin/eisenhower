kitty @ new-window --title 'eisenhower' --tab-title 'q1' -- bash -c 'while :; do clear; task q1; sleep 10; done'
kitty @ new-window --title 'eisenhower' --tab-title 'q2' -- bash -c 'while :; do clear; task q2; sleep 10; done'
kitty @ new-window --title 'eisenhower' --tab-title 'q3' -- bash -c 'while :; do clear; task q3; sleep 10; done'
kitty @ new-window --title 'eisenhower' --tab-title 'q4 sort:created+' -- bash -c 'while :; do clear; task q4 sort:created+; sleep 10; done'
kitty @ close-window --match "recent:4"
