#!/bin/zsh

do_command_remote (){
				fpath="~/tmp/mnt-command-remote-app"
				remotename=$1 
				workpath=$2
				command=$3
				mkdir -p $fpath
				sshfs $remotename":" $fpath
				cd ${fpath%%/}/$workpath
				sleep 3
				bash -c $command
				cd ~
				fusermount -u $fpath
}


labpi-208_pull_dotfiles (){
	do_command_remote labpi-208 dotfiles "git pull"
}
