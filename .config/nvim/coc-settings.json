{
    "yaml.schemas": {
        "kubernetes": "/*.yaml"
    },
    "cSpellExt.enableDictionaries": ["portuguese-brazilian"],
    "cSpell.language": "pt_BR",
    "cSpell.ignorePaths": [
        "*.py",        // this will ignore anything the node_modules directory
        "*.yaml",        // this will ignore anything the node_modules directory
        "*.c",        // this will ignore anything the node_modules directory
        "*.cpp",        // this will ignore anything the node_modules directory
        "*.gitignore",        // this will ignore anything the node_modules directory
        "node_modules",        // this will ignore anything the node_modules directory
        "**/node_modules",     // the same for this one
        "**/node_modules/**",  // the same for this one
        "node_modules/**",     // Doesn't currently work due to how the current working directory is determined.
        "vscode-extension",    //
        ".git",                // Ignore the .git directory
        "*.dll",               // Ignore all .dll files.
        "**/*.dll"             // Ignore all .dll files
    ],
}
